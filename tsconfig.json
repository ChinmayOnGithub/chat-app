{
  "compilerOptions": {
    "target": "ES2020", // modern JS
    "module": "esnext", // Node-friendly
    "moduleResolution": "node", // resolve Node modules
    "outDir": "dist", // compiled JS output
    "rootDir": ".", // your source files
    "esModuleInterop": true, // for default imports
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowJs": true
  },
  "include": [
    "**/*.ts"
  ]
}